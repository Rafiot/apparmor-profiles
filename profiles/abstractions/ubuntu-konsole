# vim:syntax=apparmor
#
# for allowing access to konsole
#

  #include <abstractions/consoles>
  #include <abstractions/kde>
  capability sys_ptrace,
  @{PROC}/[0-9]*/status r,
  @{PROC}/[0-9]*/stat r,
  @{PROC}/[0-9]*/cmdline r,
  /{,var/}run/utmp r,
  /dev/ptmx rw,

  # do not use ux or Ux here. Use at a minimum ix
  /usr/bin/konsole ix,

